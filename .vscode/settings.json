{
  "css.validate": false,
  "debug.allowBreakpointsEverywhere": true,
  "diffEditor.renderSideBySide": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
  },
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.guides.bracketPairs": "active",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.lineHeight": 30,
  "explorer.openEditors.visible": 0,
  "editor.quickSuggestions": {
    "comments": true,
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    120,
    160,
  ],
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "blade": "html",
    "vue": "html",
    "vue-html": "html",
  },
  "eslint.format.enable": true,
  "eslint.validate": [
    "vue",
    "javascript",
    "typescript",
  ],
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.php-cs": "php",
  },
  "files.eol": "\n",
  "files.exclude": {
    ".git": false,
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "intelephense.format.enable": false,
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.husky/**",
    "**/.nuxt/**",
    "**/storage/**",
    "**/database/migrations/**",
    "**/node_modules/**",
    "**/vendor/**/{Tests,tests}/**",
    "**/vendor/**/vendor/**",
  ],
  "intelephense.environment.documentRoot": "${workspaceFolder}/api/public",
  "intelephense.telemetry.enabled": false,
  "less.validate": false,
  "outline.showProperties": false,
  "outline.showVariables": false,
  "outline.showFunctions": false,
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "php-cs-fixer.lastDownload": 1658868881834,
  "php-docblocker.returnGap": true,
  "php-docblocker.qualifyClassNames": true,
  "scss.validate": false,
  "search.useIgnoreFiles": false,
  // TODO update when proper support for glob patterns is released
  // See: https://github.com/microsoft/vscode/issues/134415 and related
  "search.exclude": {
    "**/composer.lock": true,
    "**/_ide_helper.php": true,
    "**/_ide_helper_models.php": true,
    "**/package-lock.json": true,
    "**/.git/**": true,
    "**/.husky/**": true,
    "**/.nuxt/**": true,
    "**/storage/**": true,
    "**/node_modules/**/node_modules/**": true,
    "**/vendor/**/{Tests,tests}/**": true,
    "**/vendor/**/vendor/**": true
  },
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "vue",
  ],
  "tailwindCSS.emmetCompletions": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "todo-tree.tree.autoRefresh": true,
  "todo-tree.highlights.customHighlight": {
    "WARN": {
      "foreground": "#000",
      "background": "#ffcc00",
      "iconColour": "#ffcc00",
      "icon": "alert",
    },
    "TODO": {
      "foreground": "#000",
      "background": "#ccff74",
      "iconColour": "#ccff74",
      "icon": "check-circle",
    },
    "FIXME": {
      "foreground": "#000",
      "background": "#ff5f5f",
      "iconColour": "#ff5f5f",
      "icon": "flame"
    },
  },
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment"
  },
  "todo-tree.general.tags": [
    "TODO",
    "WARN",
    "FIXME",
    "REVIEW",
  ],
  "vim.camelCaseMotion.enable": true,
  "vim.leader": "<space>",
  "vim.sneak": true,
  "window.zoomLevel": -1,
  "workbench.colorTheme": "Hybrid Next (Gray Background)",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "[javascript][typescript][vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer",
  },
}
