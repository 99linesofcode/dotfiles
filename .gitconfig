[pull]
  default = current
  rebase = true
[rebase]
  autosquash = true
[push]
  default = current
[alias]
  fix = commit --fixup
  pufowile = push --force-with-lease
  sl = log --oneline --decorate --graph
  sla = sl --all
[core]
  editor = vim
  excludesfile = ~/dotfiles/.gitignore_global
  eol = lf
	autocrlf = false
[fetch]
  prune = true
[branch]
  autosetuprebase = always
[status]
  submoduleSummary = true
[diff]
  submodule = log
[init]
  defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	format = ssh
