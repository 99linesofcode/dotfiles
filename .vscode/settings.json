{
  "dash.languageIdToDocsetMap": {
    "cpp": [
      "cpp",
      "net",
      "boost",
      "cvcpp",
      "cocos2dx",
      "c",
      "manpages"
    ],
    "javascript": [
      "javascript",
      "prototype",
      "lodash",
      "nodejs",
      "moment",
      "awsjs",
      "sinon",
      "html",
      "css",
      "unity3d"
    ],
    "php": [
      "php",
      "laravel",
      "phpunit",
      "phpp",
      "html",
      "mysql",
      "sqlite",
      "mongodb",
      "psql",
      "redis"
    ],
    "typescript": [
      "typescript",
      "javascript"
    ],
  },
  "diffEditor.renderSideBySide": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
  },
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.guides.bracketPairs": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.lineHeight": 30,
  "explorer.openEditors.visible": 0,
  "editor.quickSuggestions": {
    "comments": true
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    120,
    160
  ],
  "editor.tabSize": 2,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html"
  },
  "eslint.format.enable": true,
  "eslint.validate": [
    "vue",
    "javascript",
    "typescript",
  ],
  "eslint.workingDirectories": [
    "${workspaceFolder}/nuxt",
  ],
  "extensions.ignoreRecommendations": false,
  "files.associations": {
    "*.php-cs": "php",
  },
  "files.eol": "\n",
  "files.exclude": {
    ".git": false,
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "intelephense.environment.documentRoot": "${workspaceFolder}/api/public",
  "intelephense.format.enable": false,
  "intelephense.files.exclude": [
    "**/.git",
    "**/.husky",
    "**/.nuxt",
    "**/nuxt",
    "**/_ide_helper.php",
    "**/_ide_helper_models.php",
    "**/storage",
    "**/database/migrations",
    "*.sql",
  ],
  "intelephense.files.maxSize": 5000000,
  "outline.showProperties": false,
  "outline.showVariables": false,
  "outline.showFunctions": false,
  "php-cs-fixer.config": "${workspaceFolder}/api/php-cs-fixer.php; ${workspaceFolder}/api/.php-cs-fixer.dist.php; ${workspaceFolder}/api/.php_cs; ${workspaceFolder}/api/.php_cs.dist",
  "php-docblocker.returnGap": true,
  "php-docblocker.qualifyClassNames": true,
  "search.useIgnoreFiles": false,
  // TODO: update when proper support for glob patterns is released
  // See: https://github.com/microsoft/vscode/issues/134415 and related
  "search.exclude": {
    "**/composer.lock": true,
    "**/database": true,
    "**/.git": true,
    "**/.husky": true,
    "**/_ide_helper.php": true,
    "**/_ide_helper_models.php": true,
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/package-lock.json": true,
    "**/public": true,
    "**/vendor": true,
    "**/api/storage/debugbar": true
  },
  "stylelint.enable": true,
  "stylelint.configFile": "${workspaceFolder}/nuxt/stylelint.config.js",
  "scss.lint.unknownAtRules": "ignore",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "vetur.experimental.templateInterpolationService": true,
  "vetur.format.enable": false,
  "vetur.validation.template": false,
  "vetur.validation.script": false,
  "vetur.validation.style": false,
  "vetur.validation.interpolation": false,
  "vim.camelCaseMotion.enable": true,
  "vim.leader": "<space>",
  "vim.sneak": true,
  "workbench.colorTheme": "Hybrid Next (Gray Background)",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "[json][jsonc][javascript][typescript][vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
}
